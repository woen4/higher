{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "../lib/esm/src",
    "declarationDir": "../lib/esm/types"
  },

  "include": ["../src/scripts", "../src/cli/index.ts"]
}
