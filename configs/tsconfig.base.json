{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "strictBindCallApply": false
  },

  "include": ["../src", "../index.ts"]
}
